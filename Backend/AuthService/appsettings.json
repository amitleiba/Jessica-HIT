{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "AuthDb": "Host=localhost;Port=5433;Database=jessica_auth;Username=auth_user;Password=auth_password"
  },

  "Jwt": {
    "SecretKey": "JessicaSuperSecretKeyThatIsAtLeast32CharactersLong!!2026",
    "Issuer": "jessica-auth",
    "Audience": "jessica-api",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },

  "Crypto": {
    "WorkFactor": 12
  },

  "Swagger": {
    "Title": "Jessica Auth API",
    "Version": "v1",
    "Description": "Authentication & User Management API",
    "Enabled": true
  }
}

