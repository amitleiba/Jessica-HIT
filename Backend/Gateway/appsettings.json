{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",

  "Swagger": {
    "Title": "Jessica Gateway API",
    "Version": "v1",
    "Description": "Gateway API with Keycloak OAuth2 Authentication",
    "Enabled": true
  },
  
  "Keycloak": {
    "Authority": "http://localhost:8082/realms/jessica-realm",
    "ClientId": "jessica-gateway",
    "ClientSecret": "paLiBiw4WImC0vliLKlQ6GsUkqGmVWc2",
    "RequireHttpsMetadata": false,
    "ResponseType": "code",
    "SaveTokens": true,
    "GetClaimsFromUserInfoEndpoint": true,
    "Scope": ["openid", "profile", "email"]
  },

  "ReverseProxy": {
    "Routes": {
      "jessica-manager-route": {
        "ClusterId": "jessica-manager-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/jessica/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "jessica-manager-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://jessicamanager:8080"
          }
        }
      }
    }
  }
}
